page{
    padding-bottom:175rpx;
    background: #fafafa;
}
.order_info{
 
    background: #fff;
    margin:20rpx 32rpx;
    padding:0 29rpx;
}

.order_info .title {
     font-size: 32rpx;
     font-weight: bold;
     text-align: center;

     color: #333;
     margin-top: 32rpx;
     padding-top: 32rpx;
}
.order_info .clock_icon{
     width: 40rpx;
     height: 40rpx;

     position: relative;
     top: 7rpx;
     margin-right: 10rpx;
}
.order_info .time_con {
     font-size: 28rpx;
     text-align: center;
     color: #999;
     margin-top: 16rpx;
     margin-bottom: 40rpx;
}
.order_info .time_con .time{
     color: #E61D38;
     font-weight: bold;
}


.order_info .item {
      height: 80rpx;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      font-size: 28rpx;
      color: #999;
}
.order_info  .item .txt .a{
   float: right;
}
.order_info .right_icon {
      width: 40rpx;
      height: 40rpx;
      float: right;
 }
 .pay_select_con {
      margin:32rpx;
      padding:0 29rpx;
      background:#fff;
      padding-bottom: 20rpx;
 }
 .pay_select_con  .total_con {
      height: 88rpx;
      display: flex;
      flex-direction: row;
      justify-content: space-between;

      font-size: 28rpx;
      align-items: center;
 }
 .pay_select_con  .total_con .tit{
      font-weight: bold;
 }
 .pay_select_con  .total_con  .total_money {
      color:#E61D38 ;
 }

 .pay_select_con   .pay_type {
       height: 88rpx;
       display: flex;
       flex-direction: row;
       justify-content: space-between;
       align-items: center; 
 }
 .pay_select_con   .pay_type .title_con {
       font-size: 28rpx;
       color: #333;
       display: flex;
       flex-direction: row;
 }
 .pay_select_con   .pay_type .select_icon {
       display: block;
       width: 32rpx;
       height: 32rpx;
 }
 .pay_select_con   .pay_type .pay_img {
      display: block;
      width: 36rpx;
      height: 36rpx;
      float: left;
      margin-right:20rpx;
 }
 .pay_select_con   .pay_type .txt {
     font-size: 20rpx;
     color: #999;
 }
 .pay_info {
      margin:0 32rpx ;
      padding:0 29rpx;
      margin-bottom: 20rpx;
      background: #fff;
      color:#333;
      font-size: 28rpx;
 }
 .pay_info .title {
      height: 88rpx;
      line-height: 88rpx;
      overflow: hidden;
      font-weight: bold;
 }
 .pay_info  .item{
      height: 88rpx;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
 }
 .pay_info  .item .tit{
      color: #999;
 }
 .pay_info  .item .address_txt{
       max-width: 504rpx;
 }
 .pay_info  .item .put_val{
      display: block;
      width: 480rpx;
      height: 80rpx;
      text-align: right;
  
  
      font-size: 28rpx;
      color: #BBB;
 }
 .pay_info  .item .right_icon {
     display: block;
     width: 40rpx;
     height: 40rpx;
      float: right;
 }

 .pay_info  .item  .picker_con{
    float: right;
 }
 .pay_info  .item  .picker_con .picker{
    color: #999;
 }
 .pay_info .upload_con {
      overflow: hidden;
      margin-top: 29rpx;

      padding-bottom: 80rpx;
 }
 .pay_info .upload_con .pay_img{
     display: block;
     width: 160rpx;
     height: 160rpx;
     float: left;
     margin-right: 20rpx;
     margin-bottom: 20rpx;
 }


 .pay_info  .pay_img .img{
      display: block;
      width: 100%;
      height: 100%;
      position:relative;
 }
 .pay_info .upload_btn{
       float: left;
       width: 210rpx;
 }

 .pay_info  .pay_img{
      width: 160rpx;
      height: 160rpx;
      position: relative;
 }
 .pay_info .upload_btn .img{
       display: block;
       width: 160rpx;
       height: 160rpx;
 }
 .pay_info .upload_btn .txt {
  
     font-size: 24rpx;
      margin-top: 15rpx;
 }
 .pay_page .pay_btn{
      width: 750rpx;
      height: 98rpx;
      line-height: 98rpx;
      text-align: center;
      background: #000;
      font-size: 32rpx;
      color: #fff;
      padding-bottom: 35rpx;
      padding-bottom:  constant(safe-area-inset-bottom) ;
      padding-bottom:  env(safe-area-inset-bottom) ;
      position: fixed;
      left: 0;
      bottom: 0;
      z-index:1;
 }
 .pay_info  .pay_img  .close_btn{
  display: block;
  width: 40rpx;
  height: 40rpx;

  position: absolute;
  right: 0;
  top:0;
  z-index: 10;
}