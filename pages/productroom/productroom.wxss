.product_room_con{
    overflow: hidden;
    padding-bottom:70rpx;
}
.product_room_con .menu_con{

    width: 150rpx;
    float: left;
    position: fixed;
    left: 0;
    top: 0;
}
.product_room_con .menu_con .item{
     height: 98rpx;
     line-height: 98rpx;

     overflow: hidden;

     border-left: 4px solid transparent;
     padding-left: 14rpx;
     font-size: 28rpx;
      
     color: #000;
}
.product_room_con .menu_con .item.on{
    
     border-left: 4px solid #000;
     font-weight: bold;
}
.good_content{
     width: 536rpx;
     float: right;
     margin-right: 32rpx;
     background-color: #fff;
}




.good_list_con{
    margin-bottom: 12rpx;
}
.good_list_con .banner{
    display:block;
    width: 536rpx;
    height:120rpx;
    margin-bottom:20rpx;
  }
.good_list_con .good_list{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
}
.good_list_con .good_list .good{
 
    display: block;
    /* margin-bottom: 20rpx;    */
    width: 160rpx;
    height: 194rpx;
    margin:20rpx 9rpx;
    
}
.good_list_con .good_list .good .img{
    display: block;
    width: 160rpx;
    height: 160rpx;
 
}
.good_list_con .good_list .good .txt{
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-align: center;
}

.good_list_con .good_list .brand_good{
     
     width: 100%;
     overflow: hidden;
     margin-bottom: 20rpx;
     background: #f5f5f5;
}
.good_list_con .good_list .brand_good .mch_name{
     font-size: 20rpx;
     font-weight: bold;
     margin-top: 10rpx;
     padding-right: 10rpx;
}
.good_list_con .good_list .brand_good .img{
    display: block;
    width: 268rpx;
    height: 160rpx;
    float: left;
}
.good_list_con .good_list .brand_good .text{
    width: 250rpx;
    height: 160rpx;
    float: right;
    display: flex;
    flex-direction: column;

    align-items: center;
    justify-content: center;
    overflow: hidden;
}
.good_list_con .good_list .brand_good .text .title {

     font-size: 32rpx;
     color: #000;
     font-weight: bold;
}
.good_list_con .good_list .brand_good .text .txt{
     font-size: 24rpx;
     color: #999;
     margin-top:8rpx;
}