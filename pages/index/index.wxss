}
.style_nav{
      max-width:1000rpx;
      height: 88rpx;
      display: flex;
      flex-direction: row;
}
.style_nav_list .item{
     width:60rpx;
     height: 88rpx;
     line-height: 88rpx;
     font-size: 28rpx;
