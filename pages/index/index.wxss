.vedio_list_con{
  width: 686rpx;
  height: 600rpx;
  padding:32rpx;
  margin: 80rpx 0;
  background: url("https://luockoo.oss-cn-shenzhen.aliyuncs.com/file/banner_03.jpg") no-repeat;
  background-size: cover;
}
.vedio_list_con .big_title{
  font-size: 32rpx;
  color: #fff;
  margin-top: 8rpx;
}
.vedio_list_con .big_msg{ 
  color:#C6A189 ;
  font-size: 36rpx;
  text-transform: uppercase;
  margin: 8rpx 0 40rpx;
}
.text2{
  display: block;
  width:272rpx;
  height: 152rpx;
  margin: 0 auto;
}
.vedio_list{
   overflow:hidden;
}
.vedio_list_scroll {
    width: 718rpx;
}
.vedio_list_scroll .vedio_list{
     width: 1510rpx;
     overflow: hidden;
     padding-right: 15rpx;
}
.vedio_item{
    width:484rpx;
    margin-left: 20rpx;
    float: left;
    position: relative;
}
.vedio_item:nth-child(1){
  margin-left: 0;
}
.vedio_item .img{
  display: block;
  width:484rpx;
  height: 324rpx;
}
.vedio_item .play_icon {
   display: block;
   width: 60rpx;
   height: 60rpx;
   position: absolute;
   left: 50%;
   margin-left:-30rpx;
   top:50%;
   margin-top:-30rpx;
}
.vedio_item .text_con{
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    background: #000;
    color: #fff;
}

.vedio_item .text_con .txt{
    height: 48rpx;
    line-height: 48rpx;
    float: left;
    font-size:24rpx;
    margin-left: 20rpx;
}

.vedio_item .text_con .count{
     height: 48rpx;     
     line-height: 48rpx;
     float: right;
     margin-right: 20rpx;
}
.vedio_item .text_con .count image{
  float: left;
  display: block;
  width: 28rpx;
  height: 28rpx;
  margin-top:10rpx;
  margin-right: 10rpx;
}
.new_good_list{
    overflow: hidden;
    margin:60rpx 0;
    display: flex;
    flex-direction: row;
    padding:0 28rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}
.more_btn{
     display: block;
     width: 136rpx;
     height: 50rpx;
     line-height: 50rpx;
     text-align: center;

     border:1px solid #000;
     font-size: 24rpx;
     margin:0 auto;
}

.hot_sell_con{
   margin: 128rpx 0 80rpx;
}

.hot_sell_con .title_con{
    margin: 0 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}
.hot_sell_con .title_con .title_img{
     display: block;
     width:256rpx;
     height: 154rpx;
}
.hot_sell_con .title_con .more_btn{
      margin: 0;
}

.hot_sell_con .good_list_scroll{
      width:718rpx;
      margin-top: 54rpx;
      margin-left: 32rpx;
}
.hot_sell_con .good_list_scroll .good_list{
      width:1500rpx;
      height: 580rpx;
}
.big_back{
      display: block;
      width: 750rpx;
      height: 300rpx;
}
.style_nav_list_con{
      overflow: hidden;
      margin: 20rpx 0;
      display: flex;
      flex-direction: row;
      /* border: 1px solid brown; */
}

.style_nav_list{
      /* height: 95rpx; */
