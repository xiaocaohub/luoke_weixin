page{
    background: #FAFAFA;
}
.user_info_page{
  background: #fff;
 
  margin:20rpx 32rpx;
}
.item{ 
    margin-left: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1px solid #e5e5e5;
}
.item:first-child{
    border-top: none ;
}
.item .title{
    width: 120rpx;
    height: 100rpx;
    line-height: 100rpx;
    overflow:hidden;
    font-size: 28rpx;
    text-align:right;
    color: #333;
}
.value_content{
    width: 470rpx;
    margin-right: 20rpx;
}
.put_val{
    display: block;
    width: 100%;
    height: 100rpx;

    line-height: 100rpx;


    font-size: 28rpx;
    background: #fff;
}
.submit_btn{
    width: 750rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #333;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    padding-bottom: 35rpx;
    padding-bottom:  constant(safe-area-inset-bottom) ;
    padding-bottom:  env(safe-area-inset-bottom)   ;  
}
.region_con{
    height: 100rpx; 
}
.picker_con{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden; 
}
.detail_address{
    height: 150rpx;
    font-size: 28rpx;
}
.tit_msg{
    color: #999;
}
.radio_group{
    height: 100rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction:row;
    align-items: center;
    overflow: hidden;
}
.radio_group .radio_con{
    float: left;
    margin-right: 29rpx;
}

.right_btn{
    display: block;
    float: right;
    width: 40rpx;
    height: 40rpx;
    margin-top: 29rpx;
}