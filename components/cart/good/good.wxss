.good{
    padding: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background: #fff;
    border-top: 1px solid #FAFAFA;
}
.good .select_img{
    width: 32rpx;
    height: 32rpx;
}

 .good .img_con {
     width: 280rpx;
     height: 156rpx;
     display: flex;
     flex-direction: row;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     align-items: center;
}
.good .good_img{
     display: block;
     width: 236rpx;
     height: 156rpx;
}
.good .good_info{
  width:395rpx;
  height: 200rpx;
}
 .good .good_info .title{
    font-size: 24rpx;
    height: 29rpx;
    line-height: 29rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 10rpx;
}
 .good .good_info .txt { 
     font-size: 24rpx;
     height: 28rpx;
     line-height: 28rpx;
      color: #999;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      margin-top: 5rpx;
}
.good .good_info  .price_con{
     margin-top: 20rpx;
     font-size: 24rpx;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     color: #E61D38;
}
 
.good .good_info  .price_con .price_text{
    float: left;
    max-width: 219rpx;
    overflow: hidden;
}

.good .good_info  .price_con .price_c{ 
     float: left;
}
 .good .good_info  .price_con .price_text  .price{
     font-size: 40rpx;
}
 .good .good_info  .price_con .small_price{
     color: #999;
     margin-left: 5rpx;
     float: left;
     position: relative;
     top: 17rpx;
}
 .good .good_info  .price_con .count_con { 
      overflow: hidden;
}
.good .good_info  .price_con .count_con .btn{
     width: 48rpx;
     height: 48rpx;
     line-height: 48rpx;
     text-align: center;
     float: left;
     font-size: 32rpx;
     border: 1px solid #E1E1E1;
}
 .good .good_info  .price_con .count_con .count {

     width:60rpx;
     height: 48rpx;
     line-height: 48rpx;
     float: left;
     
     border-top: 1px solid #E1E1E1;
     border-bottom: 1px solid #E1E1E1;
     text-align: center;
}









